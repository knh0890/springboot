

class Apple
{
	int weight;
	public Apple(int w)
	{
		weight = w;
	}
	public void showInfo()
	{
		System.out.println("사과의 무게는 " + weight + "입니다.");
	}
}

class Banana
{
	int sugar;
	public Banana(int s)
	{
		sugar = s;
	}
	public void showInfo()
	{
		System.out.println("바나나의 당도는 " + sugar + " 입니다.");
	}
}

//class FruitBox
